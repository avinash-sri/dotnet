@model Company.Project.Web.Models.BookReadingEventModel
@{
    ViewData["Title"] = "Create Event";
}

<h1 class="text-info font-weight-bold">Create New Event</h1>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="CreateEventPost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="Title" class="form-control input-sm" placeholder="Title.." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="Date" class="form-control" placeholder="Date..." />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="Location" class="form-control" placeholder="Location..." />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime" class="control-label text-dark font-weight-bold"></label>
                    <select asp-for="StartTime" class="form-control" asp-items="ViewBag.StartTime"></select>
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label text-dark font-weight-bold"></label>
                    <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="Duration" class="form-control" placeholder="Duration..." />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description..." />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OtherDetails" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="OtherDetails" class="form-control" placeholder="Other Details..." />
                    <span asp-validation-for="OtherDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventInvitee" class="control-label text-dark font-weight-bold"></label>
                    <input asp-for="EventInvitee" class="form-control" placeholder="EventInvitee..." />
                    <span asp-validation-for="EventInvitee" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" onclick="return confirm('Your Event is created!')" class="btn btn-info btn-block" />
                </div>
            </form>
        </div>
    </div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}