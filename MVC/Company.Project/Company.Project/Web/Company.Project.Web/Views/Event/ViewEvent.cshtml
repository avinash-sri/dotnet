@model Company.Project.Web.Models.BookReadingEventModel

<h3>Event Details</h3>
<br />
<form method="post" asp-action="ViewEvent">
    <input asp-for="Id" hidden />
    <div class="container-fluid">
        <div class="row ">
            <div class="col-3">
                <div class="form-control">
                    <label asp-for="Title" class="control-label text-dark font-weight-bold"></label>
                </div>
                <div class="form-control">
                    <label asp-for="Date" class="control-label text-dark font-weight-bold"></label>
                </div>
                <div class="form-control">
                    <label asp-for="Location" class="control-label text-dark font-weight-bold"></label>
                </div>
                <div class="form-control">
                    <label asp-for="StartTime" class="control-label text-dark font-weight-bold"></label>
                </div>
                <div class="form-control">
                    <label asp-for="Duration" class="control-label text-dark font-weight-bold"></label>
                </div>
                <div class="form-control">
                    <label asp-for="Description" class="control-label text-dark font-weight-bold"></label>
                </div>

                <div class="form-control">
                    <label asp-for="OtherDetails" class="control-label text-dark font-weight-bold">Other Details</label>
                </div>
                <div class="form-control">
                    <label asp-for="numberOfInvitee" class="control-label text-dark font-weight-bold">Number of Invitee</label>
                </div>
                
            </div>
            <div class="col-3">
                <div class="form-control">
                    <input disabled asp-for="Title">
                </div>
                <div class="form-control">
                    <input disabled asp-for="Date">
                </div>
                <div class="form-control">
                    <input disabled asp-for="Location">
                </div>
                <div class="form-control">
                    <input disabled asp-for="StartTime">
                </div>
                <div class="form-control">
                    <input disabled asp-for="Duration">
                </div>
                <div class="form-control">
                    <input disabled asp-for="Description">
                </div>

                <div class="form-control">
                    <input disabled asp-for="OtherDetails">
                </div>
                <div class="form-control">
                    <input disabled asp-for="numberOfInvitee">
                </div>
               
            </div>
        </div>
    </div>
</form>

